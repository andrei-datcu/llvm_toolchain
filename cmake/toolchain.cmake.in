set(CMAKE_SYSTEM_NAME Linux)
set(CMAKE_SYSTEM_PROCESSOR arm)
# set(CMAKE_SYSROOT @sysroot_SOURCE_DIR@/usr) # set by FetchContent_Populate
set(CMAKE_C_COMPILER_TARGET @TARGET_TRIPLE@)
set(CMAKE_CXX_COMPILER_TARGET @TARGET_TRIPLE@)
set(CMAKE_EXE_LINKER_FLAGS -Wl,--strip-all)
set(CMAKE_SHARED_LINKER_FLAGS -Wl,--strip-all)
set(CMAKE_C_FLAGS "${CMAKE_C_FLAGS} --sysroot=@sysroot_SOURCE_DIR@/usr")
set(CMAKE_CXX_FLAGS "${CMAKE_CXX_FLAGS} --sysroot=@sysroot_SOURCE_DIR@/usr")
list(APPEND CMAKE_CXX_IMPLICIT_INCLUDE_DIRECTORIES ${CMAKE_SYSROOT}/usr/include)
