set(CMAKE_SYSTEM_NAME Linux)
set(CMAKE_SYSTEM_PROCESSOR arm)
# set(CMAKE_SYSROOT @SYSROOT@) # Commented because somehow this sets -isystem and screws #include_next
set(CMAKE_C_COMPILER clang --sysroot=@SYSROOT@)
set(CMAKE_CXX_COMPILER clang++ --sysroot=@SYSROOT@)
set(CMAKE_ASM_COMPILER clang)
set(CMAKE_C_COMPILER_TARGET @TARGET_TRIPLE@)
set(CMAKE_CXX_COMPILER_TARGET @TARGET_TRIPLE@)
set(CMAKE_EXE_LINKER_FLAGS "-Wl,--strip-all -ldl -lpthread")
set(CMAKE_SHARED_LINKER_FLAGS "-Wl,--strip-all -ldl -lpthread")
set(CMAKE_C_FLAGS "-fuse-ld=lld -fPIC")
set(CMAKE_CXX_FLAGS "-fuse-ld=lld -fPIC")
